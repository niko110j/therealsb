@model SB2.Models.ViewModels.AllOrdersViewModel

@if (Model.Orders.Any())
{
    <table>
        <thead>
            <tr>
                <th>Ordre Navn</th>
                <th>Kunde Navn</th>
                <th>Kunde Email</th>
                <th>Sælger</th>
                <th>Oprettet af</th>
                <th>Bookingtype</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.Name</td>
                    <td>@order.ClientName</td>
                    <td>@order.ClientEmail</td>
                    <td>@order.SalesPersonName</td>
                    <td>@order.FilledBy</td>
                    <td>@order.BookingType</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Ingen ordrer fundet.</p>
}
