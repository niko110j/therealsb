@using Umbraco.Cms.Web.Common.PublishedModels;
@inject Umbraco.Cms.Core.Services.IMemberService MemberService
@inject Umbraco.Cms.Core.Security.IMemberManager MemberManager
@{
   
    var companyName = "Nordisk Byg A/S"; // fake session/identity

    var MM = MemberManager;
    var currentMember = await MM.GetCurrentMemberAsync();
    var isLoggedIn = Context.User?.Identity?.IsAuthenticated ?? false;
}

<style>
    .hub-section {
        background-color: #f9f9f9;
        padding: 2rem;
        margin-bottom: 2rem;
        border-radius: 10px;
        border: 1px solid #ddd;
    }

    .hub-section h2 {
        margin-top: 0;
        font-size: 1.5rem;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
    }

    table.dashboard-table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', sans-serif;
    }

    table.dashboard-table th,
    table.dashboard-table td {
        border: 1px solid #ccc;
        padding: 10px 14px;
        text-align: left;
    }

    table.dashboard-table th {
        background-color: #efefef;
        font-weight: 600;
    }

    .status {
        font-weight: bold;
        color: green;
    }

    .expired {
        color: red;
    }
</style>

@if(isLoggedIn) {

<h1>Velkommen, @companyName</h1>
<p>Dette er dit KundeHub, hvor du kan se dine aktive ordrer, betalinger og abonnement.</p>

<div class="dashboard-grid">

    <!-- Orders -->
    <div class="hub-section">
        <h2>Dine ordrer</h2>
        <table class="dashboard-table">
            <thead>
                <tr>
                    <th>Ordre ID</th>
                    <th>Dato</th>
                    <th>Status</th>
                        <th>Gentag</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>#2001</td>
                    <td>20-04-2025</td>
                    <td class="status">Leveret</td>
                    <td><a> Kopier ordre</a></td>
                </tr>
                <tr>
                    <td>#2003</td>
                    <td>22-04-2025</td>
                    <td class="status">Under behandling</td>
                        <td><a> Kopier ordre</a></td>
                </tr>
                    
            </tbody>
        </table>
    </div>

    <!-- Payments -->
    <div class="hub-section">
        <h2>Seneste betalinger</h2>
        <table class="dashboard-table">
            <thead>
                <tr>
                    <th>Faktura #</th>
                    <th>Dato</th>
                    <th>Beløb</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>F-101</td>
                    <td>01-04-2025</td>
                    <td>5.000 kr</td>
                    <td class="status">Betalt</td>
                </tr>
                <tr>
                    <td>F-102</td>
                    <td>01-05-2025</td>
                    <td>5.000 kr</td>
                    <td class="status">Afventer</td>
                </tr>
            </tbody>
        </table>
    </div>

</div>

<!-- Subscription -->
<div class="hub-section">
    <h2>Abonnement</h2>
    <p>Aktiv plan: <strong>Premium</strong></p>
    <p>Startdato: <strong>01-01-2025</strong></p>
    <p>Udløber: <strong class="@(DateTime.Now > new DateTime(2025, 12, 31) ? "expired" : "status")">31-12-2025</strong></p>
    <p>Status: <span class="status">Aktiv</span></p>
</div>
}