@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@Model.Value("pageTitle")</title>
    @{
        var random = new Random().Next(999999);
    }
    <link rel="stylesheet" href="~/css/PagesLayout.css?v=@random"   />

</head>
<body>
    <header style="background: linear-gradient(to right, #dceeff, #f7fbff); padding: 1.5rem 0; border-bottom: 1px solid #cce0f7;">
        <div class="container text-center">
            <h1 style="margin: 0; font-size: 2rem;"><a href="/overview" style="text-decoration: none; color: #2c3e50;">SmarterBooking</a></h1>
        </div>
    </header>


    <main>
        <div class="container">
        @RenderBody()
        </div>

    </main>

    <footer style="background-color: #eaf4fc; padding: 1.5rem 0; margin-top: 3rem; border-top: 1px solid #cce0f7;">
        <div class="container text-center">
            <p style="margin: 0; font-size: 0.9rem; color: #666;">&copy; 2025 SmarterBooking. Alle rettigheder forbeholdes.</p>
        </div>
    </footer>


    @RenderSection("Scripts", required: false)
</body>
</html>
